<div class="container">
  <div class="row">
    <div class="col s12">
<div class="card ">
  <div class="card-content black-text">
<form action="/articles" method="post">
        <div class="input-field col s6">
          <input type='text' id='title' class="validate"
                 name='article[published][title]'>
          <label for="title">Article Title</label>
        </div>
        <div class="input-field col s6">
          <input disabled id="authorName" type="text" name='article[authorName]'
          class="validate" value="<%= userName %>">
          <label for="authorName">Author Name</label>
        </div>
        <div class="input-field col s12">
          <label for="article-content">Article content</label><br/>
           <textarea id='article-content'
                     name='article[published][content]'
                     placeholder="remember, please be nice..."></textarea>
        </div>
        <div class="input-field col s12">
          <input id="tags" type="text" name='article[published][tags]'>
          <label for="tags">tags, comma separated</label>
        </div>
        <button class="btn blue waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
</form>
<script src='/scripts/autosize.min.js'></script>
  <script>
     autosize(document.getElementById('article-content'));
  </script>
  </div>
</div>
    </div>
  </div>
</div>
