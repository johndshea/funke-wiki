<% articles.forEach(function (article, i) { %>
    <div class="article card hoverable">
      <a href="/articles/<%= article._id %>"><div class="card-content black-text">
        <h5><%= article.published.title %></h5>
        <!-- marked breaks the truncate class -->
        <span class="title truncate"> <%- marked(article.published.content) %> </span>
        Author: <%= article.authorName || "Anonymous" %><br/>
        Tags: <%= article.published.tags.join(', ') || "none" %> <br/>
        Last Edited: <%= article.published.last_edited || "never" %> <br/>
      </div></a>
      <div class="card-action">
        <a href="/articles/<%= article._id %>">View</a>
        <a href="/articles/<%= article._id %>/edit">Edit</a>
      </div>
    </div>
  <% }) %>
