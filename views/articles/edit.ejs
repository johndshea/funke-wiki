<div class="container">
  <div class="row">
    <div class="col s12">

<div class="card ">
  <div class="card-content black-text">
<form action="/articles/<%= article._id %>?_method=PATCH" method="post">
  <div class="input-field col s6">
    <input type='text' id='title' class="validate"
           name='article[title]'
           value="<%= article.published.title %>">
    <label for="title" class="active">Article Title</label>
  </div>
  <div class="input-field col s6">
    <input disabled id="authorName" type="text" name='article[authorName]'
    class="validate" value="<%= article.authorName %>">
    <label for="authorName" class="active">Author</label>
  </div>
  <div class="input-field col s12">
    <label for="article-content" class="active">Article content</label><br/>
     <textarea id='article-content'
               name='article[content]'><%= article.published.content %></textarea>
  </div>
  <div class="input-field col s12">
    <input id="tags" type="text" name='article[tags]'
    value="<%= article.published.tags %>">
    <label for="tags" class="active">tags, comma separated</label>
  </div>
  <div class="input-field col s12">
    <input disabled type='text' id="last_edited"
           value="<%= article.published.last_edited || "never" %>">
    <label for="last_edited" class="active">Last Edited</label>
  </div>
<% if (article.authorId == userId) { %>
  <button class="btn blue waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
<% } else { %>
  <button class="btn blue waves-effect waves-light" type="submit" name="action">Submit Draft
    <i class="material-icons right">send</i>
  </button>
<% } %>
</form>
<% if (article.authorId == userId) { %>
  <form action="/articles/<%= article._id %>?_method=DELETE" method="post"><br/>
    <input type="submit" class="btn red" value="Delete this article"></form>
<% } %>

<script src='/scripts/autosize.min.js'></script>
  <script>
     autosize(document.getElementById('article-content'));
  </script>
  </div>
</div>

    </div>
  </div>
</div>
